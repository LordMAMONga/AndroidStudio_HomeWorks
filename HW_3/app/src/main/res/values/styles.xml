<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Style" parent="Widget.Material3.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">32dp</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>
    <style name="Gray.Button" parent="Base.Style">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Dark.Button" parent="Base.Style">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Orange.Button" parent="Base.Style">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>